<% layout('./layouts/boilerplate') %>

    <div class="flex flex-col justify-center items-center mx-auto px-4 py-8">
        <div class="flex flex-col max-w-3xl gap-4 w-[700px]">
            <div class="flex w-full justify-between bg-white shadow-lg rounded-lg p-6">
                <div>
                    <h1 class="text-3xl font-bold text-lightTeal mb-2">
                        <%= todo.heading %>
                    </h1>
                    <h2 class="text-xl text-gray-700 mb-4">
                        <span class="uppercase">
                            <%= todo.subHeading %>
                        </span>
                    </h2>
                    <p class="text-gray-800 mb-6">
                        <span class="font-extrabold text-lg">Description:</span> <span class="text-lg">
                            <%= todo.description %>
                        </span>
                    </p>
                    <p class="text-gray-600">Created on: <span class="font-semibold">
                            <%= date %>
                        </span></p>
                </div>

                <div>
                    <a href="/todo/<%= todo._id %>/edit"><i class="bi bi-pencil"></i></a>
                    <br>
                    <form action="/todo/<%=todo._id%>?_method=delete" method="POST">
                        <button><i class="bi bi-trash"></i></button>
                    </form>
                </div>
            </div>
            <div class="ml-[4px]">
                <a href="/">Back To Home</a>
            </div>
        </div>
    </div>